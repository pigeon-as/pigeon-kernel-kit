# TC + eBPF for tc-redirect-tap networking
CONFIG_NET_SCHED=y
CONFIG_BPF=y
CONFIG_BPF_SYSCALL=y
CONFIG_CGROUP_BPF=y
CONFIG_NET_CLS_ACT=y
CONFIG_NET_CLS_BPF=y
CONFIG_NET_ACT_BPF=y
CONFIG_CGROUPS=y

# WireGuard + TUN
CONFIG_WIREGUARD=y
CONFIG_TUN=y

# LVM / device-mapper
# CONFIG_DAX is not set
CONFIG_MD=y
CONFIG_BLK_DEV_DM=y
CONFIG_DM_THIN_PROVISIONING=y
CONFIG_DM_SNAPSHOT=y
CONFIG_DM_CACHE=y
CONFIG_DM_MIRROR=y

# Ctrl+Alt+Del shutdown fallback (x86_64 only, ignored on aarch64)
CONFIG_INPUT_KEYBOARD=y
CONFIG_KEYBOARD_ATKBD=y
CONFIG_SERIO=y
CONFIG_SERIO_I8042=y

# Virtio-mmio enumeration via kernel cmdline
CONFIG_VIRTIO_MMIO_CMDLINE_DEVICES=y
